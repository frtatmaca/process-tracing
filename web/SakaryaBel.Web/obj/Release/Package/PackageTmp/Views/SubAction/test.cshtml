                openEffect: 'none',
                closeEffect: 'none',
                padding: 0,
                closeBtn: false,
                'afterClose': function () {
                    //window.location.reload();
                },
                helpers: {
                    overlay: {
                        css: {                                                       
                        }
                    }
                }
            });
        });

    </script>
}
