@model SakaryaBel.Web.Models.ChangePasswordViewModel

@{
    ViewBag.Title = "Şifre Değiştir";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<h3>Şifre Değiştir</h3>

<div class="widgetbox login-information">
    <h4 class="widgettitle" style="margin-bottom:-5px !important">Şifre Değiştir</h4>
    <div class="widgetcontent form-horizontal">
        @using (Html.BeginForm("ChangePassword", "User", FormMethod.Post, new { @class = "stdform stdform2", id = "frmUserNew" }))
        {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.Id, new { @value = ViewBag.UserId })

            <div>
                <div class="col-md-7">
                    <label class="control-label col-md-3">Eski Şifre:</label>
                    @Html.PasswordFor(m => m.OldPassword, new { @placeholder = "Eski Şifre", @class = "input-xxlarge .span5", @id = "userName" })
                    @Html.ValidationMessageFor(m => m.OldPassword, String.Empty, new { @class = "help-inline", @style = "color:red" })
                </div>
            </div>

            <div>
                <div class="col-md-7">
                    <label class="control-label col-md-3">Eski Şifre:</label>
                    @Html.PasswordFor(m => m.NewPassword, new { @placeholder = "Yeni Şifre", @class = "input-xxlarge .span5", @id = "userName" })
                    @Html.ValidationMessageFor(m => m.NewPassword, String.Empty, new { @class = "help-inline", @style = "color:red" })
                </div>
            </div>

            <div>
                <div class="col-md-7">
                    <label class="control-label col-md-3">Eski Şifre:</label>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "Yeni Şifre Tekrar", @class = "input-xxlarge .span5", @id = "userName" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, String.Empty, new { @class = "help-inline", @style = "color:red" })
                </div>
            </div>

            <p class="pull-right">
                <button type="submit" class="btn btn-primary">Güncelle</button> &nbsp;
                <a href="javascript:parent.jQuery.fancybox.close();" class="btn btn-default">iptal</a>
            </p>
        }
        @*<div class="form-group">
                <label class="col-md-2 control-label">Firstname:</label>
                <div class="col-md-10">
                    <div class="divider10"></div>
                    <a href="" class="link">Change Password</a>
                </div>
            </div>*@

    </div>
</div>


