<body class="loginpage">
    <div class="loginpanel">
        <div class="loginpanelinner">
            <div class="logo animate0 bounceIn">
                <img alt="Porto" width="150" height="150" style="margin-top: 15px" data-sticky-width="82" data-sticky-height="40" src="~/images/logo.png" />
            </div>
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "login" }))
            {        
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)                   
                <div class="inputwrapper login-alert">
                    <div class="alert alert-error">Invalid username or password</div>
                </div>
                <div class="inputwrapper animate1 bounceIn">
                    @Html.TextBoxFor(m => m.Username, new { @placeholder = "Kullanıcı Adı", id = "username" })
                    <br />
                    <br />
                    @Html.ValidationMessageFor(m => m.Username, String.Empty, new { @class = "help-inline", @style = "color:white" })
                </div>
                <div class="inputwrapper animate2 bounceIn">
                    @Html.PasswordFor(m => m.Password, new { @placeholder = "Şifre", id = "password" })
                    <br />
                    <br />
                    @Html.ValidationMessageFor(m => m.Password, String.Empty, new { @class = "help-inline", @style = "color:white" })
                </div>
                <div class="inputwrapper animate3 bounceIn">
                    <button type="submit" id="btnSubmit">Sign In</button>
                </div>
                <div class="inputwrapper animate4 bounceIn">
                    @* <div class="pull-right">Not a member? <a href="registration.html">Sign Up</a></div>
                    <label><input type="checkbox" class="remember" name="signin" /> Keep me sign in</label>*@
                </div>                            
            }
        </div>
        <!--loginpanelinner-->
