    <h4 class="widgettitle" style="margin-bottom: -5px"></h4>
    <div class="widgetcontent nopadding">
        @using (Html.BeginForm("New", "SubAction", FormMethod.Post, new { @class = "stdform stdform2", id = "frmActionNew" }))
